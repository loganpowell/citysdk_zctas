{
    "name": "citysdk_zctas",
    "author": "Logan Powell",
    "license": "MIT",
    "version": "0.2.67",
    "description": "typescript configuration and starter project",
    "type": "module",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "repository": "https://github.com/loganpowell/citysdk_zctas",
    "homepage": "https://github.com/loganpowell/citysdk_zctas",
    "scripts": {
        "clean": "rm -rf ./lib & rm -rf ./dist &  rm -rf .cache",
        "madge": "madge --circular lib/",
        "typewatch": "tsc --project tsconfig.json",
        "types": "tsc --project tsconfig.build.json",
        "jsdoc": "jsdoc -c jsdoc/jsdoc.json --verbose --debug",
        "docs": "npm run types && npm run jsdoc",
        "patch": "npm version patch && npm run docs && npm run pages && npm publish",
        "test": "npm run madge && concurrently \"npm run typewatch\" \"jest --watchAll\"",
        "postgit": "git push origin master && npm run patch",
        "ncu": "ncu -u && npm i && npm audit fix",
        "git": "npm run ncu && git add . && git commit -m",
        "dev-old": "concurrently \"npm run typewatch\" \"vite\"",
        "dev": "vite",
        "build": "vite build",
        "pages": "npm run build && rm -rf ./docs/* && cp -r ./dist/* ./docs/",
        "preview": "vite preview"
    },
    "keywords": [],
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "chroma-js": "^2.1.2",
        "citysdk": "^2.2.0",
        "dotenv": "^10.0.0",
        "lodash": "^4.17.21",
        "maplibre-gl": "^1.15.2",
        "node-fetch": "^3.1.0"
    },
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.16.5",
        "@types/jest": "^27.0.3",
        "@types/node": "^17.0.2",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "babel-jest": "^27.4.5",
        "cross-env": "^7.0.3",
        "eslint": "^8.5.0",
        "eslint-plugin-jest": "^25.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gh-pages": "^3.2.3",
        "googleapis": "^92.0.0",
        "jest": "^27.4.5",
        "jest-environment-jsdom": "^27.4.4",
        "jsdom": "^19.0.0",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.4.0",
        "vite": "^2.7.6"
    },
    "browserslist": [
        "last 3 Chrome versions"
    ],
    "prettier": {
        "singleQuote": false,
        "printWidth": 100,
        "endOfLine": "lf",
        "tabWidth": 4,
        "semi": false,
        "arrowParens": "avoid"
    },
    "quokka": {
        "env": {
            "params": {
                "runner": "--max-old-space-size=8000"
            }
        }
    }
}
